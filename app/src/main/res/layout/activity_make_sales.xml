<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeSalesActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/reports_header_bk">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="204dp"
                    android:layout_height="128dp"
                    android:layout_centerInParent="true"
                    tools:srcCompat="@drawable/ic_app_installation_pana" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_sales_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerLayout">

                <include layout="@layout/card_main_sales" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_sales_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_sales_layout"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <include layout="@layout/card_sales" />

                <include layout="@layout/card_sales" />

                <include layout="@layout/card_sales" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_sales_layout_1"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <include layout="@layout/card_pay_button" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>