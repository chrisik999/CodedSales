<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateItemActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guidelineHorizontal48"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical96"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical4"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal4"/>

    <TextView
        android:id="@+id/txtBarcodeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal4"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical4"
        android:layout_marginStart="8dp"
        android:text="No BarCode Detected"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical96"
        app:layout_constraintBottom_toTopOf="@id/guidelineHorizontal48"
        android:clickable="true"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_clear" />

    <TextView
        android:id="@+id/txtViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Name"
        android:textColor="@color/colorDarkGreal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/createItemTxtName"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical4"
        app:layout_constraintTop_toTopOf="@+id/createItemTxtName" />
    <EditText
        android:id="@+id/createItemTxtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/guidelineHorizontal48"
        app:layout_constraintEnd_toEndOf="@+id/guidelineVertical96"
        app:layout_constraintStart_toEndOf="@id/txtViewName"
        android:hint="@string/name_of_item"
        android:inputType="textPersonName"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtViewCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Code"
        android:textColor="@color/colorDarkGreal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/createItemTxtStockCode"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical4"
        app:layout_constraintTop_toTopOf="@+id/createItemTxtStockCode"
        app:layout_constraintVertical_bias="0.476" />

    <EditText
        android:id="@+id/createItemTxtStockCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Item code"
        app:layout_constraintStart_toStartOf="@+id/createItemTxtName"
        app:layout_constraintTop_toBottomOf="@+id/createItemTxtName"
        app:layout_constraintEnd_toEndOf="@id/createItemTxtName"
        android:inputType="text"
        android:enabled="false"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Price"
        android:textColor="@color/colorDarkGreal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/createItemTxtPrice"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical4"
        app:layout_constraintTop_toTopOf="@+id/createItemTxtPrice" />
    <EditText
        android:id="@+id/createItemTxtPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/createItemTxtStockCode"
        app:layout_constraintTop_toBottomOf="@+id/createItemTxtStockCode"
        app:layout_constraintEnd_toEndOf="@id/createItemTxtStockCode"
        android:hint="Enter item price"
        android:inputType="number"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Desc"
        android:textColor="@color/colorDarkGreal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/createItemTxtDescription"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical4"
        app:layout_constraintTop_toTopOf="@+id/createItemTxtDescription" />

    <EditText
        android:id="@+id/createItemTxtDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:textSize="18sp"
        android:hint="Enter item description"
        app:layout_constraintEnd_toEndOf="@id/createItemTxtPrice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/createItemTxtPrice"
        app:layout_constraintTop_toBottomOf="@+id/createItemTxtPrice" />

    <TextView
        android:id="@+id/txtViewMQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="MQty"
        android:textColor="@color/colorDarkGreal"
        android:textSize="18sp"
        android:hint=""
        app:layout_constraintBottom_toBottomOf="@+id/createItemTxtAddMQty"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical4"
        app:layout_constraintTop_toTopOf="@+id/createItemTxtAddMQty" />
    <EditText
        android:id="@+id/createItemTxtAddMQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter minimum quantity"
        app:layout_constraintStart_toStartOf="@+id/createItemTxtDescription"
        app:layout_constraintTop_toBottomOf="@+id/createItemTxtDescription"
        app:layout_constraintEnd_toEndOf="@id/createItemTxtDescription"
        android:inputType="number"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/createItemTxtAddMQty"
        app:layout_constraintStart_toStartOf="@id/txtViewMQty"
        app:layout_constraintTop_toBottomOf="@+id/createItemTxtAddMQty">

        <Button
            android:id="@+id/btnCreateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Create"
            android:textSize="16sp"
            android:background="@color/colorDarkGreal"
            />

        <Button
            android:id="@+id/createItemBtnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Clear"
            android:textSize="16sp"
            android:background="@color/colorRed"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>